<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector">
    <ImageView
        android:id="@+id/zd_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="66px"
        android:maxWidth="66px"
        android:paddingBottom="20px"
        android:paddingRight="10px"
        android:paddingTop="20px" />
      <com.example.jizhangben1.TextViewMy
        android:id="@+id/kongge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:textSize="20dp"  />
     <com.example.jizhangben1.TextViewMy
        android:id="@+id/zd_fenlei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:textSize="20dp"  />
      <com.example.jizhangben1.TextViewMy
        android:id="@+id/kongge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:textSize="20dp"  />
 
    <com.example.jizhangben1.TextViewMy
        android:id="@+id/zd_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:textSize="20dp" />
     <com.example.jizhangben1.TextViewMy
        android:id="@+id/kongge3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:textSize="20dp"  />
    
    <com.example.jizhangben1.TextViewMy
        android:id="@+id/zd_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:textSize="20dp" />
</LinearLayout>
